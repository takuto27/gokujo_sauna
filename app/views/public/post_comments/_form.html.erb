<%= form_with(model:[post, post_comment], url: post_comments_path ,local: false) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class: "w-100 text_area" %>
  <%= hidden_field_tag :post_id, post.id%>
  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>