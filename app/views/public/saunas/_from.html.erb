<% saunas.each do |sauna| %>
  <%= link_to sauna_path(sauna.id) do %>
    <div class="col-4">
      <div class="card m-1">
        <%= link_to sauna_path(sauna.id) do %>
          <%= image_tag sauna.image, size: '200x200', class:"card-img-top" %>
        <% end %>
        <div class="card-body">
          <div class="card-text">
            <div class="mb-1 text-nowrap overflow-hidden text-truncate">店舗名:<%= sauna.sauna_name %></div>
            <div class="mb-1 text-nowrap overflow-hidden text-truncate">アクセス:<%= sauna.access %></div>
            <div class="mb-1 text-nowrap overflow-hidden text-truncate">サウナ温度:<%= sauna.sauna_temperature %>度</div>
            <div class="mb-1 text-nowrap overflow-hidden text-truncate">水風呂温度:<%= sauna.water_temperature %>度</div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
