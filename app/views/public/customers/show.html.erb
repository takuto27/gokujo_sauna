<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h4><%= @customer.name %>さんの会員詳細</h4>
      <%= render 'public/customers/info', customer: @customer %>
    </div>
    <div class="col-9 d-flex flex-column">
      <h4><%= @customer.name %>さんの投稿一覧</h4>
      <div class="d-flex flex-row flex-wrap">
        <%= render 'public/posts/from', posts: @posts %>
      </div>
      <div class="col-md-2 mx-auto text-left">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>
