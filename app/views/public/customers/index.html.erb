<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'public/customers/info', customer: current_customer %>
    </div>
  <div class="col-9 d-flex flex-column">
    <h4>会員一覧</h4>
      <div class="d-flex flex-row flex-wrap">
        <%= render 'form', customers: @customers %>
      </div>
      <div class="col-md-2 mx-auto text-left">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>
