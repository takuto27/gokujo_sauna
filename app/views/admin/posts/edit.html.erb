<div class="container">
  <div class="m-md-2"><br></div>
  <div class="row">
    <div class="col-md-2"></div>
    <h4 class="col-md-2 mx-auto text-center">
      <strong>投稿</strong>
    </h4>

    <div class="col-md-8"></div>
  </div>

  <div class="m-md-2"><br></div>


  <%= form_for(@post, url: {controller: 'admin/posts', action: 'update'}) do |f| %>

    <div class="form_group row">
      <div class="col-md-3"></div>
      <div class="col-md-1 text-left">投稿者</div>
      <div class="col-md-8"><%= link_to admin_customer_path(@post.customer.id) do %><%= @post.customer.name %><% end %></div>
    </div>

    <div class="m-2"></div>

    <div class="form_group row">
      <div class="col-md-3"></div>
      <div class="col-md-1 text-left">都道府県</div>
      <div class="col-md-8"><%= @post.sauna.prefecture %></div>
    </div>

    <div class="m-2"></div>

    <% if params[:id].present? %>
      <div class="form_group row">
        <div class="col-md-3"></div>
        <div class="col-md-1 text-left"><%= f.label :title, '店舗名' %></div>
        <div class="col-md-8"><%= @post.sauna.sauna_name %></div>
        <%= f.hidden_field :sauna_id, :value => params[:id] %>
      </div>
    <% end %>

    <div class="form_group row">
      <div class="col-md-3"></div>
      <div class="col-md-1"></div>
      <div class="col-md-4"><%= image_tag @post.sauna.image, size: '200x250', class:"card-img-top" %></div>
    </div>

    <div class="m-2"></div>

    <div class="form-group row">
      <div class="col-md-3"></div>
      <div class="col-md-1 text-left">評価</div>
      <div class="col-md-8"><%= render "static_rate", post: @post %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"></div>
      <div class="col-md-1 text-left"><%= f.label :title, 'タイトル' %></div>
      <div class="col-md-8"><%= f.text_field :title, placeholder: "タイトル", required: true, size: "43" %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"></div>
      <div class="col-md-1 text-left"><%= f.label :body, 'レビュー' %></div>
      <div class="col-md-8"><%= f.text_area :body, placeholder: "感想を記入", required: true, size: "46x10" %></div>
    </div>


    <div class="form-group row">
      <div class="col-md-3"></div>
      <div class="col-md-2 text-left">表示ステータス</div>
      <div class="col-md-3">
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, '表示　' %>

        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, '非表示　' %>
      </div>
    </div>


    <div class="row">
      <div class="action center-block mx-auto">
      <%= f.submit '変更する', class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>